@model TimeEntryCore.Models.Worktime

@{
    ViewData["Title"] = "Edit";
}

<h1>Bearbeiten</h1>

<h4>Arbeitszeit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorktimeID" />
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID">
                    <option value="">-- Projekt auswählen --</option>
                </select>
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceID" class="control-label"></label>
                <select asp-for="ServiceID" class="form-control" asp-items="ViewBag.ServiceID">
                    <option value="">-- Aufgabe auswählen --</option>
                </select>
                <span asp-validation-for="ServiceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label"></label>
                <input type="text" id="datepicker" asp-for="WorkDate" class="form-control" />
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeUsed" class="control-label"></label>
                <input asp-for="TimeUsed" class="form-control" />
                <span asp-validation-for="TimeUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingTime" class="control-label"></label>
                <input asp-for="DrivingTime" class="form-control" />
                <span asp-validation-for="DrivingTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Lunch" /> @Html.DisplayNameFor(model => model.Lunch)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
